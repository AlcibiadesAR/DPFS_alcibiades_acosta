<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', { pageTitle: title }) %>
  </head>
  <body>
    <%- include('../partials/header', { headerClass: 'header-black'}) %>
    <main>
      <h1 class="title-products"><%= TitleH1Category %></h1>
      <form action="/search" class="search-form-catalog" method="get">
        <div class="search-container">
          <input name="query" placeholder="Buscar..." type="text" />
          <i class="bx bx-search-alt"></i>
        </div>
      </form>
      <section class="container-products">
        <div class="grid-container">
          <% for (let watch of lista) { %>
          <article class="card">
            <img alt="<%= watch.Name %>" src="<%= watch.Image %>" />
            <div class="card-content">
              <h3><%= watch.Name %></h3>
              <p>
                <span class="span-price-original">$<%= watch.Price %></span>
                <% if (watch.DiscountPercentage > 0) { %>
                <span class="span-DiscountPercentage"
                  >% <%= watch.DiscountPercentage %></span
                >
                <% } %>
              </p>
            </div>
            <div class="btn-group">
              <a href="/products/<%= watch.Id %>" class="btn-outline"
                >Ver Detalles</a
              >
              <button class="btn-outline">
                <i class="bx bxs-shopping-bag"></i> AÃ±adir al carrito
              </button>
            </div>
          </article>
          <% } %>
        </div>
      </section>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
