<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head', { pageTitle: title }) %>
  </head>
  <body>
    <%- include('../partials/header', { headerClass: 'header-black'}) %>
    <main>
      <h1 class="title-products" id="title-admiUsers">Administraci√≥n de Usuarios</h1>

      <form action="/admiUsers/searchUsers" method="get" class="search-form-catalog" id="search-form">
        <div class="search-container">
          <input name="query" placeholder="Buscar por ID..." type="text" />
          <i class="bx bx-search-alt search-icon" id="search-icon-2" onclick="submitSearchForm()"></i>
        </div>
      </form>

      <a href="/admiUsers/createUsers" class="btn-create-admi">
        <i class="bx bx-plus"></i> Crear
      </a>
      <table class="table-admi">
        <thead>
          <tr>
            <th class="th-admi">ID</th>
            <th class="th-admi">Nombre</th>
            <th class="th-admi">Apellido</th>
            <th class="th-admi">Ver</th>
            <th class="th-admi">Editar</th>
          </tr>
        </thead>
        <tbody>
          <% list.forEach(function(User) { %>
          <tr>
            <td class="td-admi"><%= User.id %></td>
            <td class="td-admi"><%= User.first_name %></td>
            <td class="td-admi"><%= User.last_name %></td>
            <td class="td-admi">
              <a href="/admiUsers/detailsUsers/<%= User.id %>" class="btn-view-admi">
                <i class="bx bx-show"></i>
              </a>
            </td>
            <td class="td-admi">
              <a href="/admiUsers/editUsers/<%= User.id %>" class="btn-edit-admi">
                <i class="bx bx-edit"></i>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>


    <%- include('../partials/footer') %>

    <script src="/javascripts/search.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
