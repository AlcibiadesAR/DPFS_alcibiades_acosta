<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { pageTitle: title }) %>
</head>
<body>
  <%- include('../partials/header', { headerClass: 'header-black' }) %>
  <main>
    <section class="box-form" id="form-reset-password">
      <h1 class="title-users-forgotPassword">Crea una nueva contraseña</h1>
      <form action="/users/resetPassword" method="POST">
        <input type="hidden" name="email" value="<%= email %>" />
        <div>
          <input
            type="password"
            name="password"
            id="Password"
            placeholder="Nueva Contraseña"
            value="<%= password || '' %>"
            class="<%= (errors && errors.password) ? 'error-input' : '' %>"
          />
          <% if (errors && errors.password) { %>
            <span class="error"><%= errors.password.msg %></span>
          <% } %>
          <span class="eye-icon">
            <i class="fas fa-eye-slash eye-off-outline"></i>
          </span>
        </div>
        <div>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            placeholder="Confirmar Contraseña"
            value="<%= confirmPassword || '' %>"
            class="<%= (errors && errors.confirmPassword) ? 'error-input' : '' %>"
          />
          <% if (errors && errors.confirmPassword) { %>
            <span class="error"><%= errors.confirmPassword.msg %></span>
          <% } %>
          <span class="eye-icon">
            <i class="fas fa-eye-slash eye-off-outline"></i>
          </span>
        </div>
        <button type="submit" class="btn-submit" id="btn-resetPassword">Enviar</button>
      </form>
    </section>
  </main>
  <%- include('../partials/footer') %>

  <script src="/javascripts/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
